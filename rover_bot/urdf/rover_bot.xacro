<?xml version='1.0'?>

<robot name="rover_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Color descriptions -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <xacro:include filename="$(find rover_bot)/urdf/rover_bot.gazebo" />

  <link name="robot_footprint"></link>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .2 .1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .2 .1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='left_front_wheel'>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint type="continuous" name="left_front_wheel_hinge">
      <origin xyz="0.125 0.15 0" rpy="0 0 0"/>
      <child link="left_front_wheel"/>
      <parent link="chassis"/>
      <axis xyz="0 1 0" rpy="0 0 0"/>
      <limit effort="10000" velocity="1000"/>
      <dynamics damping="1.0" friction="1.0"/>
   </joint>

   <link name='right_front_wheel'>
     <inertial>
       <mass value="5.0"/>
       <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
       <inertia
           ixx="0.1" ixy="0" ixz="0"
           iyy="0.1" iyz="0"
           izz="0.1"
       />
     </inertial>

     <collision name='collision'>
       <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
       <geometry>
         <cylinder radius="0.1" length="0.05"/>
       </geometry>
     </collision>

     <visual>
       <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
       <geometry>
         <cylinder radius="0.1" length="0.05"/>
       </geometry>
       <material name="black"/>
     </visual>
   </link>

   <joint type="continuous" name="right_front_wheel_hinge">
       <origin xyz="0.125 -0.15 0" rpy="0 0 0"/>
       <child link="right_front_wheel"/>
       <parent link="chassis"/>
       <axis xyz="0 1 0" rpy="0 0 0"/>
       <limit effort="10000" velocity="1000"/>
       <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name='left_back_wheel'>
      <inertial>
        <mass value="5.0"/>
        <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
        <inertia
            ixx="0.1" ixy="0" ixz="0"
            iyy="0.1" iyz="0"
            izz="0.1"
        />
      </inertial>

      <collision name='collision'>
        <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.1" length="0.05"/>
        </geometry>
      </collision>

      <visual>
        <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
        <geometry>
          <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <joint type="continuous" name="left_back_wheel_hinge">
        <origin xyz="-0.125 0.15 0" rpy="0 0 0"/>
        <child link="left_back_wheel"/>
        <parent link="chassis"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
     </joint>

     <link name='right_back_wheel'>
       <inertial>
         <mass value="5.0"/>
         <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
         <inertia
             ixx="0.1" ixy="0" ixz="0"
             iyy="0.1" iyz="0"
             izz="0.1"
         />
       </inertial>

       <collision name='collision'>
         <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
         <geometry>
           <cylinder radius="0.1" length="0.05"/>
         </geometry>
       </collision>

       <visual>
         <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
         <geometry>
           <cylinder radius="0.1" length="0.05"/>
         </geometry>
         <material name="black"/>
       </visual>
     </link>

     <joint type="continuous" name="right_back_wheel_hinge">
         <origin xyz="-0.125 -0.15 0" rpy="0 0 0"/>
         <child link="right_back_wheel"/>
         <parent link="chassis"/>
         <axis xyz="0 1 0" rpy="0 0 0"/>
         <limit effort="10000" velocity="1000"/>
         <dynamics damping="1.0" friction="1.0"/>
      </joint>

    <!-- Camera link -->

    <link name="camera">
        <inertial>
          <mass value="0.1"/>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <inertia
              ixx="1e-6" ixy="0" ixz="0"
              iyy="1e-6" iyz="0"
              izz="1e-6"
          />
    </inertial>

    <collision name="collision">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.05 0.05 0.05" />
        </geometry>
        </collision>

    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.05 0.05 0.05" />
        </geometry>
        <material name="green"/>
     </visual>
   </link>

    <!-- Camera Joint -->

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.2 0 0" rpy="0 0 0"/>
        <child link="camera"/>
        <parent link="chassis"/>
    </joint>

    <!-- Laser Rangefinder link -->

    <link name="hokuyo">
        <inertial>
          <mass value="0.1"/>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <inertia
              ixx="1e-6" ixy="0" ixz="0"
              iyy="1e-6" iyz="0"
              izz="1e-6"
          />
        </inertial>

        <collision name="collision">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
        </collision>

        <visual>
           <origin xyz="0 0 0" rpy="0 0 0"/>
           <geometry>
               <mesh filename="package://rover_bot/meshes/hokuyo.dae"/>
               <!-- mesh filename="$(find rover_bot)/meshes/hokuyo.dae"/ -->
           </geometry>
        </visual>
    </link>

    <!-- Laser Rangefinder Joint -->

    <joint type="fixed" name="hokuyo_joint">
        <origin xyz=".15 0 0.1" rpy="0 0 0"/>
        <child link="hokuyo"/>
        <parent link="chassis"/>
    </joint>

</robot>
